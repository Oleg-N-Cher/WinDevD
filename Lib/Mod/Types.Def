MODULE Types;

(* $P- allow non-portable code *)

IMPORT SYSTEM;

TYPE

  APTR    * = SYSTEM.PTR;
  LONG    * = LONGINT;
  ULONG   * = LONGINT;
  LONGBITS* = SET;
  WORD    * = SHORTINT;
  UWORD   * = SHORTINT;
  (*WORDBITS* = SYSTEM.WORDSET;*)
  UBYTE   * = BYTE;
  (*BYTEBITS* = SYSTEM.BYTESET;*)
  RPTR    * = INTEGER;
  STRING  * = ARRAY 32767 OF CHAR;
  STRPTR  * = POINTER[1] TO STRING;

  SHORT   * = WORD;
  USHORT  * = UWORD;
  COUNT   * = INTEGER;
  UCOUNT  * = INTEGER;
  CPTR    * = ULONG;

  FLOAT   * = REAL;
  DOUBLE  * = LONGREAL;
  BOOL    * = INTEGER;
  TEXT    * = CHAR;

CONST

  NULL           * = NIL;
  BYTEMASK       * = 0FFH;

TYPE

  PROC *  = PROCEDURE;
  LBOOL * = LONGINT;
  (*BSET *  = SYSTEM.BYTESET;*)
  (*WSET *  = SYSTEM.WORDSET;*)

CONST

  LFALSE * = 0;
  LTRUE *  = 1;

TYPE

  INT8 * = BYTE;
  INT16 * = SHORTINT;
  INT32 * = INTEGER;
  INT64 * = LONGINT;
  UINT8 * = BYTE;
  UINT16 * = SHORTINT;
  UINT32 * = INTEGER;
  UINT64 * = LONGINT;

PROCEDURE -_init* "/*-noinit*/";

END Types.

